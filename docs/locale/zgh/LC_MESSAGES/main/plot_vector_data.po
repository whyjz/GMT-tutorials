"4 0\n"
"4 4\n"
"0 4\n"
"0 0\n"
">\n"
"0 4\n"
"4 0\n"
">\n"
"0 0\n"
"3 3\n"
">\n"
"3 1\n"
"3 3\n"
">\n"
"1 3\n"
"2 4\n"
">\n"
"2 4\n"
"4 2"
msgstr ""

